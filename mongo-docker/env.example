# MongoDB Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=secure_password_123
MONGO_DATABASE=userdb

# MongoDB Express Configuration
MONGO_EXPRESS_USERNAME=admin
MONGO_EXPRESS_PASSWORD=express_password_123

# Application Configuration
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=5000

# Database Connection
MONGODB_URI=mongodb://admin:secure_password_123@mongodb:27017/userdb?authSource=admin

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Security
SECRET_KEY=your_super_secret_key_change_in_production
JWT_SECRET_KEY=your_jwt_secret_key_change_in_production
BCRYPT_LOG_ROUNDS=12

# Performance
MONGODB_MAX_POOL_SIZE=50
MONGODB_MIN_POOL_SIZE=10
MONGODB_MAX_IDLE_TIME_MS=30000

# CORS Configuration
CORS_ORIGINS=*

# Pagination
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100
